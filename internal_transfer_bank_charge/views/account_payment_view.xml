<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="account_payment_form_inherit_bank_charge_internal_t" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.bank.charge.internal.transfer</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="it_fixed_bank_charge_amount" invisible="not allow_bank_charge_on_it"
                       required="allow_bank_charge_on_it" readonly="state == 'posted'"/>
                <!--                <field name="related_bank_charge_account_id"-->
                <!--                       invisible="not allow_bank_charge_on_it"-->
                <!--                       required="allow_bank_charge_on_it"-->
                <!--                       domain="[('id', 'in', allowed_journals_ids)]"-->
                <!--                />-->
                <field name="related_bank_charge_account_id"
                       invisible="not allow_bank_charge_on_it"
                       domain="[('id', 'in', allowed_journals_ids)]"
                       readonly="state == 'posted'"
                />
                <field name="allowed_journals_ids" invisible="1"/>
                <field name="allow_bank_charge_on_it" invisible="1"/>
            </xpath>

        </field>
    </record>

</odoo>