<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_payment_form_inherit_bank_charge" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.bank.charge</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="fixed_bank_charge_amount"
                       invisible="payment_type != 'outbound' or is_internal_transfer or not show_partner_bank_account or allow_on_payment != True"
                       readonly="state == 'posted'"/>
                <field name="allow_on_payment" invisible="1"/>
            </xpath>

        </field>
    </record>

</odoo>