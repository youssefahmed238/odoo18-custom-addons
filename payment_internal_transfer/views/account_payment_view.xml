<odoo>

    <record id="view_account_payment_form_internal_transfer" model="ir.ui.view">
        <field name="name">account.payment.form.internal.transfer</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <!-- Add the is_internal_transfer field before the payment_type field -->
            <xpath expr="//field[@name='payment_type']" position="before">
                <label for="is_internal_transfer"/>
                <div>
                    <field name="is_internal_transfer" readonly="state != 'draft'"/>
                    <span invisible="paired_internal_transfer_payment_id or not is_internal_transfer or state != 'draft'"
                          class="fst-italic">
                        A second payment will be created in the destination journal.
                    </span>
                </div>
            </xpath>

            <!-- Make the partner_id field invisible when the payment is an internal transfer -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">partner_type != 'customer' or is_internal_transfer</attribute>
            </xpath>

            <!-- Add source petty employee field -->
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="source_petty_employee_id"
                       readonly="state != 'draft'"
                       invisible="not is_source_petty"
                       required="is_source_petty"/>
            </xpath>

            <!-- Customer Bank Account -->
            <xpath expr="(//field[@name='partner_bank_id'])[1]" position="attributes">
                <attribute name="invisible">not show_partner_bank_account or partner_type != 'customer' or is_internal_transfer or payment_type == 'inbound'</attribute>
                <attribute name="required">require_partner_bank_account and not is_internal_transfer</attribute>
            </xpath>

            <!-- Vendor Bank Account -->
            <xpath expr="(//field[@name='partner_bank_id'])[2]" position="attributes">
                <attribute name="invisible">not show_partner_bank_account or partner_type != 'supplier' or is_internal_transfer or payment_type == 'inbound'</attribute>
                <attribute name="required">require_partner_bank_account and not is_internal_transfer</attribute>
            </xpath>

            <!-- Company Bank Account -->
            <xpath expr="(//field[@name='partner_bank_id'])[3]" position="attributes">
                <attribute name="invisible">not show_partner_bank_account or is_internal_transfer or payment_type == 'outbound'</attribute>
                <attribute name="required">require_partner_bank_account and not is_internal_transfer</attribute>
            </xpath>

            <!-- Add destination journal fields -->
            <xpath expr="//group[@name='group2']" position="inside">
                <field name="destination_journal_id" placeholder="e.g. Cash"
                       context="{'default_partner_id': partner_id}"
                       invisible="not is_internal_transfer" readonly="state != 'draft'"
                       required="is_internal_transfer and state == 'draft'"/>

                <field name="destination_petty_employee_id"
                       readonly="state != 'draft'"
                       invisible="not is_destination_petty or not is_internal_transfer"
                       required="is_destination_petty"/>
            </xpath>

        </field>
    </record>

</odoo>