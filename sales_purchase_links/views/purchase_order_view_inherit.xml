<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add a button to create Quotation from Purchase Order form view -->
            <xpath expr="//form/header" position="inside">
                <button name="action_create_quotation"
                        type="object"
                        string="Create Quotation"/>
            </xpath>

            <!-- Display the linked sale order in the purchase order form view -->
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="source_sale_order_id" readonly="1" invisible="not source_sale_order_id"/>
            </xpath>
        </field>
    </record>

</odoo>